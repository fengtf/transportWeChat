.tag{
  width: 100%
}
.tag-box{
  width: 100rpx;
  margin:0 auto;
  margin-top: 150rpx;
}
#myMap{
  /* position: absolute; */
}
.map-title{
  position: absolute;
  font-size: 25rpx;
  background:rgba(0, 0, 0, 0.7);
  color: white;
  padding: 10rpx 15rpx;
  width: 150rpx;
  text-align: center;
  left:290rpx;
  top: 100rpx;
  border-radius: 10rpx;
}
.page-section{
  position: relative;
}
.price-box{
  padding: 30rpx 0;
  text-align: center;
  font-size: 25rpx;
  border-top: 2rpx solid #F5F5F6;
  position: relative
}
.black-bg1{
  width: 100%;
  height: 100%;
  position: absolute;
  background: rgba(0, 0, 0, 0.5);
  top: 0;
  z-index: 10;
}
.black-bg2{
  width: 100%;
  height: 100%;
  position: fixed;
  background: rgba(0, 0, 0, 0.5);
  bottom: 0;
  z-index: 10;
}
.person-info{
  width: 100%;
  height: 600rpx;
  position: absolute;
  transition: all .5s;
  box-shadow: 0rpx 0rpx 20rpx gray;
  background: white;
  border-radius: 20rpx 20rpx 0 0;
  overflow: hidden;
  bottom: 0;
}
.picker{
  font-size: 28rpx;
  padding:25rpx 30rpx;

}
.picker-date{
  color: #808080;
  margin-left: 30rpx;
}
.picker-title{
  color:#495060;
  padding-right:10rpx;
}
.confirm-info{
  margin-top: 80rpx;
  position: relative;
}
.info-title{
  position: relative;
  padding: 20rpx;
  text-align: center;
  border-bottom: 2rpx solid #F5F5F6
}
.close-info{
  position: absolute;
  right:20rpx;
  top: 15rpx;
}
.open-info{
  position:absolute;
  top: 40rpx;
  right: 15rpx;
  box-shadow: 0 0 30rpx rgb(223, 215, 215);
  border-radius: 50%;
  padding: 10rpx
}
.prompt{
  color: red;
  font-size: 25rpx;
  position: absolute;
  top: -70rpx;
  left: 30rpx;
}
.confirm{
  background: #19BE6B;
  color: white;
  border-radius: 50rpx;
  width: 90%;
  font-size: 30rpx;
}
.submit{
  margin-top: 20rpx;
}